DIR=$(pwd)

echo "Creando el script de la prueba..."
echo "DIR=\"$DIR\"" > testcon-test
cat bin/testcon-test.tmp >> testcon-test
chmod a+rx testcon-test

echo "Creando el archivo de programacion..."
echo "\
#Descomenta si lo quiere cada minuto
#0-59 * * * * $DIR/testcon-test
#Descomenta si lo quiere cada 5 minutos
0,5,10,15,20,25,30,35,40,45,50,55 * * * * $DIR/testcon-test
#Descomenta si lo quiere cada 10 minutos
#0,10,20,30,40,50 * * * * $DIR/testcon-test
#Descomenta si lo quiere cada 15 minutos
#0,15,30,45 * * * * $DIR/testcon-test
#Descomenta si lo quiere cada 30 minutos
#0,30 * * * * $DIR/testcon-test
#Descomenta si lo quiere cada hora
#0 * * * * $DIR/testcon-test
" > testcon-cron

echo "Ahora puede:

Ejecutar una prueba: $ sh testcon-test

Programar la prueba para que se ejecute periodicamente: $ sh testcon-programa
"
